extends layout

block contenido
    .contenido.animate__animated.animate__fadeInUp
        .wrapper-contenido  
            h1.title-contenido=nombrePagina
            if error
                ul.list-error
                    i.fas.fa-times.error-message-close
                    each err in error
                        li=err.message
            .content-buttons
                button.btn.btn-green.open-modal Agregar venta
            //- .content-filters
            //-     form(action="")
